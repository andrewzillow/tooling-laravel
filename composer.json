{
    "name": "aryeo/tooling-laravel",
    "description": "Development tooling for Laravel",
    "type": "composer-plugin",
    "require": {
        "php": "^8.4",
        "composer-plugin-api": "^2.0",
        "canvural/larastan-strict-rules": "^3.0",
        "composer/composer": "^2.0",
        "ergebnis/phpstan-rules": "^2.12",
        "larastan/larastan": "^3.8",
        "laravel/framework": "^12.36",
        "laravel/pint": "^1.25",
        "nikic/php-parser": "^5.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.1",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "symfony/console": "^7.3",
        "symfony/filesystem": "^7.3",
        "symfony/finder": "^7.3"
    },
    "require-dev": {
        "orchestra/testbench": "^10.6",
        "orchestra/testbench-core": "^10.7",
        "brianium/paratest": "^7.14"
    },
    "autoload": {
        "psr-4": {
            "Tooling\\": "src/Tooling/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Justin Seliga",
            "email": "justinsel@zillowgroup.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "preferred-install": {
            "laravel/pint": "source"
        },
        "sort-packages": true
    },
    "extra": {
        "class": "Tooling\\Composer\\Plugins\\PublishConfigurations",
        "laravel": {
            "providers": [
                "Tooling\\Provider"
            ]
        },
        "tooling": {
            "rector": {
                "rules": "tooling/rector/rules.php"
            }
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "php ./vendor/bin/testbench tooling:pint:clone-base-command",
            "php ./vendor/bin/testbench tooling:discover"
        ]
    }
}
